{
	"configuration":{
		"appenders": {
			"RandomAccessFile": {
				"name": "FILE",
				"fileName": "app.log",
				"PatternLayout": {
					"pattern": "%d{yyyy-MM-dd HH:mm:ss} [%p] [%t] %c.%M(%L) | %m%n" 
				}
			},
			"Console": {
				"name": "STDOUT",
				"PatternLayout": {
					"pattern": "%d{yyyy-MM-dd HH:mm:ss} [%p] [%t] %c.%M(%L) | %m%n" 
				}
			}
		},

		"loggers": {
			"root": {
				"level": "INFO",
				"AppenderRef": [
					{"ref": "STDOUT"},
					{"ref": "FILE"}
				]
			},
			"logger":[{
				"name": "jane.course", 
				"level": "TRACE",
				"appender-ref": [{"ref": "FILE"},{"ref": "STDOUT"}]
            }]
		}
	}
}